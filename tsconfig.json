{
  "compilerOptions": {
    "target": "es6",
    "module": "ES6",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "Node"
  },
  "exclude": [
    "node_modules"
  ]
}
